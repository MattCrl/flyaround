{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planemodel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planeModel.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ planeModel.model }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ planeModel.manufacturer }}</td>
            </tr>
            <tr>
                <th>Cruisespeed</th>
                <td>{{ planeModel.cruiseSpeed }}</td>
            </tr>
            <tr>
                <th>Planenbseats</th>
                <td>{{ planeModel.planeNbSeats }}</td>
            </tr>
            <tr>
                <th>Isavailable</th>
                <td>{% if planeModel.isAvailable %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="/" class="btn btn-warning" role="button">Return to homepage</a>
    <a href="{{ path('planemodel_index') }}" class="btn btn-warning" role="button">Back to the list</a>
    <a href="{{ path('planemodel_edit', { 'id': planeModel.id }) }}" class="btn btn-danger" role="button">Edit this plane</a>

    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger">
    {{ form_end(delete_form) }}

{% endblock %}
